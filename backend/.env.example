# Server
NODE_ENV=development
PORT=3000
CLIENT_ORIGIN=http://localhost:3001

# Mongo
MONGODB_URI=mongodb://127.0.0.1:27017/ApkaMushroom

# Auth
JWT_ACCESS_SECRET=change_me_access
JWT_REFRESH_SECRET=change_me_refresh
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Razorpay
RAZORPAY_KEY_ID=your_key_id
RAZORPAY_KEY_SECRET=your_key_secret

# Uploads
UPLOADS_DIR=src/uploads
MAX_UPLOAD_MB=10

# OTP
OTP_TTL_MINUTES=10

# Email (SMTP) - required to actually send OTP emails.
# If these are not set, OTP will only be logged to the backend console.
APP_NAME=Apka Mushroom
EMAIL_FROM=no-reply@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
